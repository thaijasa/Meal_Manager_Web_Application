<!DOCTYPE html>
<html lang="en-US">
<head>
        <% include head %>
        <% include css/common_css %>
        <% include css/admin_css %> <% include css/restaurant_format %>

<script type="text/javascript">
        function validate()
        {
            userid  = document.getElementById("userid").value;
            pwd = document.getElementById("pwd").value;
           
            errors = "";
    
            if (userid == "") {
                errors += "Missing userid.\n";
            } 
            if (pwd == "") {
                errors += "Missing password.\n";
            } 
          
    
            if (errors != "") {
              alert(errors);
            }
            else{
                document.r_login.submit();

            }
           
        }
      
        
        
    </script>
</head>
<body>
<header>
    <% include restaurant_loggedout_header %>
</header>
<div class="restaurant_login_info">
    <%= message%> 
</div>
<div class="restaurant_login_form">

    <form name="r_login" id="r_login" method="post" action="/r_home">
        
        <div id = 'id5'>
        <p>
          
            <center> <h1 id='id3'>Restaurant Login</h1></center><br>
						
            <center >							
		
			<p>
				<label for="userid">EMAILID*:</label> <input id="userid" 
					name="userid" type="text"  class="required"  title="USERID" >

			</p>
			<p>
				<label for="pwd">PASSWORD*:</label> <input id="pwd" name="pwd" 
					type="password" class="required" title="pwd">

			</p>

			
			<p>
                    <center><b>	<button type="button"  onclick="validate()" id ='buttonid'> Submit</button></b></center>
                    </p>
</center>
            </div>
	</form>
   </div> 

</body>
</html>